{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Standalone (Debug)",
            "type": "process",
            "command": "D:/Application/VisualStudio/MSBuild/Current/Bin/amd64/MSBuild.exe",
            "args": [
                "${workspaceFolder}/Builds/VisualStudio2026/GranularProcessor.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/m",
                "/nologo",
                "/v:minimal"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": { "reveal": "always", "panel": "shared", "clear": true }
        },
        {
            "label": "Build: Standalone (Release)",
            "type": "process",
